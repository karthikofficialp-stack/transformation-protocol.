    <script type="text/babel">
      
      // 1. Skill Component
      function Skill({ name }) {
        return <span className="skill-badge">{name}</span>;
      }

      // 2. ProfileCard Component
      function ProfileCard() {
        const [isHired, setIsHired] = React.useState(false);

        const handleHire = () => {
          setIsHired(true);
        };

        return (
          <div className={`card ${isHired ? "hired" : ""}`}>
            <h2>Karthi</h2>
            <p>Frontend Developer â€¢ React Enthusiast</p>

            <div style={{ marginBottom: "10px" }}>
              <Skill name="React" />
              <Skill name="JavaScript" />
              <Skill name="Node.js" />
            </div>

            {!isHired ? (
              <button onClick={handleHire}>Hire Me</button>
            ) : (
              <strong>ðŸŽ‰ Hired!</strong>
            )}
          </div>
        );
      }

      // 3. Render
      const root = ReactDOM.createRoot(document.getElementById("root"));
      root.render(<ProfileCard />);
      
    </script>
